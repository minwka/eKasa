<UserControl x:Name="welcomeControl" x:Class="eKasa.Uninstaller.Controls.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:eKasa.Uninstaller.Controls"
             mc:Ignorable="d">
	<Grid x:Name="mainGrid" Width="400" Height="535">
		<TextBlock x:Name="title" Text="Merhaba!" TextWrapping="Wrap" Margin="10,0,10,0" Height="50" VerticalAlignment="Top" Foreground="#FFFF4343" FontSize="34"/>
		<TextBlock x:Name="description" TextWrapping="Wrap" Margin="10,50,10,0" Height="130" VerticalAlignment="Top" Foreground="#FFFF4343" FontSize="18" FontStyle="Italic"><Run Text="eKasa kaldırma sihirbazına hoş geldiniz!"/><LineBreak/><Run/><LineBreak/><Run Text="Bu sihirbaz, eKasa uygulamasını ve tüm bileşenlerini bilgisayarınızdan kaldırmak için size yardımcı olacaktır."/></TextBlock>
		<Image x:Name="logo" Height="257" VerticalAlignment="Top" Width="256" Margin="72,219,72,0" Source="/Controls/ekasa_logo.png"/>
	</Grid>
</UserControl>
